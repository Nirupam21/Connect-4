<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/results"
        android:layout_width="246dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toTopOf="@id/boardlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="45sp"
        android:gravity="center"
        android:fontFamily="cursive" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/resbtn"
        app:layout_constraintLeft_toRightOf="@id/results"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <Button
        android:id="@+id/resbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/results"
        app:layout_constraintBottom_toTopOf="@id/boardlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/homebtn"
        android:text="Play Again"
        android:visibility="invisible"
        android:onClick="playAgain"
        android:textColor="#ffffff"
        android:backgroundTint="#32cd32"/>

    <Button
        android:id="@+id/homebtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/resbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/results"
        app:layout_constraintBottom_toTopOf="@id/boardlayout"
        android:text="Return to Home"
        android:visibility="invisible"
        android:onClick="home"
        android:textColor="#ffffff"
        android:backgroundTint="#4169e1"/>

